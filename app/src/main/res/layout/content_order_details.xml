<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.utk.user.helpman.OrderDetails"
        tools:showIn="@layout/activity_order_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/msg_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/msg"
                android:layout_below="@+id/scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:text="Order Details"
                android:padding="7sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="7sp"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/msg_layout"
            android:weightSum="2">

            <TextView
                android:id="@+id/order_details_service_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Service Requested"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/order_details_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Plumber"
                android:textStyle="normal"
                android:textColor="#000000"
                android:layout_weight="1"
                android:inputType="textMultiLine"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="7sp"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/row0"
            android:weightSum="2">

            <TextView
                android:id="@+id/order_details_order_id_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Request Id"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/order_details_order_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="1234"
                android:textStyle="normal"
                android:textColor="#000000"
                android:layout_weight="1"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="7sp"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/row1"
            android:weightSum="2">

            <TextView
                android:id="@+id/order_details_status_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Status"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/order_details_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="RECEIVED"
                android:textStyle="normal"
                android:textColor="#000000"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="7sp"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/row2"
            android:weightSum="2">

            <TextView
                android:id="@+id/order_details_date_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Request Time"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/order_details_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="17th Mar 2016 6:12 AM"
                android:textStyle="normal"
                android:textColor="#000000"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="7sp"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/row3"
            android:weightSum="2">

            <TextView
                android:id="@+id/order_details_billed_amount_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Billed Amount"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/order_details_billed_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Rs. 250"
                android:textStyle="normal"
                android:textColor="#000000"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="7sp"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/row4"
            android:weightSum="2">

            <TextView
                android:id="@+id/order_details_contact_number_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Contact Number"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/order_details_contact_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="8197562872"
                android:textStyle="normal"
                android:textColor="#000000"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="7sp"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/row5"
            android:weightSum="2">

            <TextView
                android:id="@+id/order_details_contact_name_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Contact Name"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/order_details_contact_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Test User"
                android:textStyle="normal"
                android:textColor="#000000"
                android:layout_weight="1"
                android:inputType="textMultiLine"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="7sp"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/row6"
            android:weightSum="2">

            <TextView
                android:id="@+id/order_details_contact_address_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Contact Address"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/order_details_contact_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="345, 14B Cross, 17th Main, Sector-4, HSR Layout, Bangalore"
                android:textStyle="normal"
                android:textColor="#000000"
                android:layout_weight="1"
                android:inputType="textMultiLine"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2sp"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/row7"
            android:weightSum="2">

            <Button
                android:id="@+id/order_details_cancel_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="CANCEL"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@color/colorPrimaryDark"
                android:layout_weight="1"
                android:layout_marginRight="20sp"/>

            <Button
                android:id="@+id/order_details_contact_us_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="CONTACT US"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#000000"
                android:layout_weight="1"
                android:layout_marginRight="20sp"/>
        </LinearLayout>

    </RelativeLayout>